<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowBackground">@color/colorPrimaryDark</item>
    </style>


    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?attr/windowBackground</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="paddingStart">@dimen/_1sdp</item>
        <item name="paddingEnd">@dimen/_1sdp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="ToolBarText">
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="customfontstyleStatus" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="textView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="employeeTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorPrimary</item>

        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/employeeColorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorPrimary</item>
        <item name="windowBackground">@color/employeeColorPrimaryDark</item>
    </style>

    <style name="managerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorPrimary</item>

        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/managerColorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorPrimary</item>
        <item name="windowBackground">@color/managerColorPrimaryDark</item>
    </style>

    <style name="supervisorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorPrimary</item>

        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/supervisorColorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorPrimary</item>
        <item name="windowBackground">@color/supervisorColorPrimaryDark</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>
</resources>
