<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="clientChartBean"
            type="com.velozion.myoitc.bean.ClientChartBean" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/placeholder_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="?attr/windowBackground"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clntprfimage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_svg_clients" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="@dimen/_30sdp"
                android:elevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:drawableStart="@drawable/ic_svg_clients_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@{clientChartBean.clientName}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_mail_black_24dp"
                        android:drawablePadding="@dimen/_5sdp"
                       android:id="@+id/clientChart_email"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_svg_call_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text='@{clientChartBean.cliMobile ?? ""}'
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_svg_map_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="@{clientChartBean.cliAddress + `,` +clientChartBean.cliCity+ `,` +clientChartBean.cliState+ `,` +clientChartBean.cliCountry}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="?attr/windowBackground"
                android:padding="@dimen/_8sdp"
                android:text="TASK HISTORY"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="@dimen/_3sdp"
                app:tabTextAppearance="@style/customfontstyle"
                app:tabTextColor="@color/colorPrimaryDark" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>