<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="employeeFolderObj"
            type="com.velozion.myoitc.bean.EmployeeFolderBean" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/placeholder_bg"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:elevation="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clintchtimage"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_svg_clients" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/clintchtimage"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_svg_clients_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@{employeeFolderObj.empName}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_svg_business_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@{employeeFolderObj.company == null ? `-` : employeeFolderObj.company}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_svg_services_type_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@{employeeFolderObj.position == null ? `-` : employeeFolderObj.position}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_svg_idea_16"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@{employeeFolderObj.role}"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>